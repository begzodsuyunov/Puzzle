<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg"
    tools:context=".screen.MainActivity">

    <LinearLayout

        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.1">

        <LinearLayout

            android:id="@+id/restart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/back_style_menus"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView

                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_margin="@dimen/_3sdp"
                android:src="@drawable/ic_graphics_restart_svgrepo_com" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="restart"
                android:textAllCaps="true"
                android:textColor="#533407"
                android:textSize="@dimen/_6sdp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout

            android:id="@+id/finish"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/back_style_menus"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView

                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_margin="@dimen/_3sdp"
                android:src="@drawable/ic_racing_finish_svgrepo_com" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Finish"
                android:textAllCaps="true"
                android:textColor="#533407"
                android:textSize="@dimen/_6sdp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout

        android:id="@+id/result"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/back_style_result"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.22"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintWidth_percent="0.4">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <TextView

                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Current "
                android:textColor="#E48F11"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0" />

            <TextView

                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="Time : "
                android:textColor="#EDC03A"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text"
                app:layout_constraintVertical_bias="0" />

            <TextView

                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="2dp"
                android:text="Score : "
                android:textColor="#EDC03A"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/time"
                app:layout_constraintVertical_bias="0" />


            <Chronometer

                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="10dp"
                android:text="09:18:07"
                android:textColor="#EDC03A"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text"
                app:layout_constraintVertical_bias="0" />

            <TextView

                android:id="@+id/score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                android:text="67"
                android:textColor="#EDC03A"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/time"
                app:layout_constraintVertical_bias="0" />

            <LinearLayout

                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:background="@color/stroke"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <TextView

                android:id="@+id/text_best"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="The Best"
                android:textColor="#E48F11"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0" />

            <TextView

                android:id="@+id/time_best"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="Time : "
                android:textColor="#EDC03A"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_best"
                app:layout_constraintVertical_bias="0" />

            <TextView

                android:id="@+id/score_best"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="2dp"
                android:text="Score : "
                android:textColor="#EDC03A"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/time_best"
                app:layout_constraintVertical_bias="0" />


            <TextView

                android:id="@+id/time_text_best"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginEnd="10dp"
                android:text="00:06:00"
                android:textColor="#EDC03A"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_best"
                app:layout_constraintVertical_bias="0" />

            <TextView

                android:id="@+id/score_text_best"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                android:text="101"
                android:textColor="#EDC03A"
                android:textSize="@dimen/_9sdp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/time_best"
                app:layout_constraintVertical_bias="0" />


            <LinearLayout

                android:layout_width="6dp"
                android:layout_height="match_parent"
                android:background="@color/stroke"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <LinearLayout

        android:id="@+id/box"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/back_style_game"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.64"
        app:layout_constraintLeft_toLeftOf="@id/result"
        app:layout_constraintRight_toRightOf="@id/result"
        app:layout_constraintTop_toBottomOf="@id/result"
        app:layout_constraintVertical_bias="0">

        <RelativeLayout
            android:id="@+id/group_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn1"
                style="@style/ItemButtonLand"
                android:layout_margin="@dimen/_3sdp"
                android:text="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn2"
                style="@style/ItemButtonLand"
                android:layout_margin="@dimen/_3sdp"
                android:layout_toEndOf="@id/btn1"
                android:text="2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn3"
                style="@style/ItemButtonLand"
                android:layout_margin="@dimen/_3sdp"
                android:layout_toEndOf="@id/btn2"
                android:text="3" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn4"
                style="@style/ItemButtonLand"
                android:layout_margin="@dimen/_3sdp"
                android:layout_toEndOf="@id/btn3"
                android:text="4" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn5"
                style="@style/ItemButtonLand"
                android:layout_below="@id/btn1"
                android:layout_margin="@dimen/_3sdp"
                android:text="5" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn6"
                style="@style/ItemButtonLand"
                android:layout_below="@id/btn1"
                android:layout_margin="@dimen/_3sdp"
                android:layout_toEndOf="@id/btn1"
                android:text="6" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn7"
                style="@style/ItemButtonLand"
                android:layout_below="@id/btn1"
                android:layout_margin="@dimen/_3sdp"
                android:layout_toEndOf="@id/btn2"
                android:text="7" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn8"
                style="@style/ItemButtonLand"
                android:layout_below="@id/btn1"
                android:layout_margin="@dimen/_3sdp"
                android:layout_toEndOf="@id/btn3"
                android:text="8" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn9"
                style="@style/ItemButtonLand"
                android:layout_below="@id/btn5"
                android:layout_margin="@dimen/_3sdp"
                android:text="9" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn10"
                style="@style/ItemButtonLand"
                android:layout_below="@id/btn5"
                android:layout_margin="@dimen/_3sdp"
                android:layout_toEndOf="@id/btn1"
                android:text="10" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn11"
                style="@style/ItemButtonLand"
                android:layout_below="@id/btn5"
                android:layout_margin="@dimen/_3sdp"
                android:layout_toEndOf="@id/btn2"
                android:text="11" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn12"
                style="@style/ItemButtonLand"
                android:layout_below="@id/btn5"
                android:layout_margin="@dimen/_3sdp"
                android:layout_toEndOf="@id/btn3"
                android:text="11" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn13"
                style="@style/ItemButtonLand"
                android:layout_below="@id/btn9"
                android:layout_margin="@dimen/_3sdp"
                android:text="9" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn14"
                style="@style/ItemButtonLand"
                android:layout_below="@id/btn9"
                android:layout_margin="@dimen/_3sdp"
                android:layout_toEndOf="@id/btn1"
                android:text="10" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn15"
                style="@style/ItemButtonLand"
                android:layout_below="@id/btn9"
                android:layout_margin="@dimen/_3sdp"
                android:layout_toEndOf="@id/btn2"
                android:text="11" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn16"
                style="@style/ItemButtonLand"
                android:layout_below="@id/btn9"
                android:layout_margin="@dimen/_3sdp"
                android:layout_toEndOf="@id/btn3"
                android:text="16" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout

        android:id="@+id/menus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:drawable/screen_background_dark_transparent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/_70sdp"
        android:paddingBottom="@dimen/_70sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.1">



        <LinearLayout

            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:background="@drawable/back_style_menus"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:id="@+id/image"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_margin="@dimen/_4sdp"
                android:src="@drawable/ic_baseline_volume_up_24" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Sound"
                android:textAllCaps="true"
                android:textColor="#533407"
                android:textSize="@dimen/_6sdp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout

            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:background="@drawable/back_style_menus"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView

                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_margin="@dimen/_4sdp"
                android:src="@drawable/ic_info_svgrepo_com" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Info"
                android:textAllCaps="true"
                android:textColor="#533407"
                android:textSize="@dimen/_6sdp"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>